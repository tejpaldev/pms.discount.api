<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    <!-- Replace OWNER with your GitHub username or organization name -->
    <add key="github" value="https://nuget.pkg.github.com/OWNER/index.json" />
  </packageSources>
  <packageSourceCredentials>
    <github>
      <!-- Replace with your actual GitHub username -->
      <add key="Username" value="YOUR_GITHUB_USERNAME" />
      <!-- Replace with your actual GitHub personal access token with read:packages scope -->
      <add key="ClearTextPassword" value="YOUR_GITHUB_TOKEN" />
    </github>
  </packageSourceCredentials>
</configuration>

<!-- 
INSTRUCTIONS:
1. Replace OWNER in the URL with your GitHub username or organization name
2. Replace YOUR_GITHUB_USERNAME with your actual GitHub username
3. Replace YOUR_GITHUB_TOKEN with a GitHub personal access token that has read:packages scope
4. Make sure this file is at the solution root level
5. Restart Visual Studio after making these changes
-->
